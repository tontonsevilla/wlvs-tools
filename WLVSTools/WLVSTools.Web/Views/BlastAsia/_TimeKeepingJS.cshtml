<script>
    $(function () {
        $("#btnSend").on("click", function () {
            let mailTo = "mailto:" + $("#Recipient").val() +
                "?cc=" + $("#CCRecipient").val() +
                "&subject=" + $("#Subject").val();

            navigator.clipboard.writeText($("#Body").val());

            window.location.href = mailTo;
        });

        $("#EmailDate").on("change", function () {
            $("#Subject").val(`WFH ${moment($(this).val()).format("L")}`);
        });
    });
</script>