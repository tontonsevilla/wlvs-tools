@model WLVSTools.Web.Models.BlastAsia.TimeKeeping

<div class="card card-primary">
    <div class="card-header">
        <h3 class="card-title">Time @Model.Type.ToString() Email Template</h3>
    </div>
    <div class="card-body">
        <div class="form-group">
            @Html.LabelFor(m => m.Recipient)
            @Html.TextBoxFor(m => m.Recipient, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.CCRecipient)
            @Html.TextBoxFor(m => m.CCRecipient, new { @class = "form-control", @readonly = "readonly" })
        </div>
        <div class="form-group">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    @Html.LabelFor(m => m.Subject)
                    @Html.TextBoxFor(m => m.Subject, new { @class = "form-control", @readonly = "readonly" })
                </div>
                <div class="col-sm-12 col-md-6">
                    @Html.LabelFor(m => m.EmailDate)
                    @Html.TextBoxFor(m => m.EmailDate, "{0:yyyy-MM-dd}", new { @class = "form-control", @type = "date" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Body)
            @Html.TextAreaFor(m => m.Body, new { @class = "form-control", @readonly = "readonly" })
        </div>
    </div>
    <div class="card-footer">
        <button type="button" id="btnSend" class="btn btn-success fa-pull-right">Send</button>
    </div>
</div>
